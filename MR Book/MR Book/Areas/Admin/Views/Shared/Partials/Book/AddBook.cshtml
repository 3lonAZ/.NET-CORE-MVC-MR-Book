 @model (BookModel,List<SelectListItem>,List<SelectListItem>)

<div id="addEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Dashboard" asp-action="AddBook" enctype="multipart/form-data" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Əlavə et: <span style="color:green">Kitab</span></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" maxlength="30" required oninvalid="this.setCustomValidity('Boş yeri doldurun !')" oninput="this.setCustomValidity('')" asp-for="Item1.Name" />
                    </div>
                    <div class="form-group">
                        <label>Author</label>
                        <input type="text" class="form-control" maxlength="30" required oninvalid="this.setCustomValidity('Boş yeri doldurun !')" oninput="this.setCustomValidity('')" asp-for="Item1.Author">
                    </div>
                    <div class="form-group">
                        <label>Language</label>

                        <select class="form-control form-control-lg" asp-for="Item1.LanguageId" asp-items="@Model.Item3">

                        </select>
                        @*<input type="text" class="form-control" maxlength="15" required oninvalid="this.setCustomValidity('Boş yeri doldurun !')" oninput="this.setCustomValidity('')" asp-for="Item1.Languages">*@
                    </div>
                    <div class="form-group">
                        <label>PageCount</label>
                        <input type="text" class="form-control" maxlength="4" onkeypress="return valid_numbers(event);"  required oninvalid="this.setCustomValidity('Boş yeri doldurun !')" oninput="this.setCustomValidity('')" asp-for="Item1.PageCount">
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                         <select class="form-control form-control-lg" asp-for="Item1.CategoryID" asp-items="@Model.Item2">
                        </select>
                        @*<input type="text" class="form-control" maxlength="70" required oninvalid="this.setCustomValidity('Boş yeri doldurun !')" oninput="this.setCustomValidity('')" asp-for="Item1.Category">*@
                    </div>
                    <div class="form-group">
                        <label>About</label>
                        <textarea type="text" class="form-control" maxlength="1000" required oninvalid="this.setCustomValidity('Boş yeri doldurun !')" oninput="this.setCustomValidity('')" asp-for="Item1.About"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input type="text" class="form-control" maxlength="7" onkeypress="return valid_numbers(event);"  required oninvalid="this.setCustomValidity('Boş yeri doldurun !')" oninput="this.setCustomValidity('')" asp-for="Item1.Price">
                    </div>
                    <div class="form-group">
                        <label>Release Date</label>
                        <input type="date" class="form-control" asp-for="Item1.Release_Date" value="mm/dd/yyyy" required/>
                    </div>
                    <div class="form-group">
                        <label>Size</label>
                        <input type="text" class="form-control" asp-for="Item1.Size" required>
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input id="fileUpload" type="file" accept="image/*" class="form-control" onchange="GetFileSizeNameAndType()" asp-for="Item1.BookIMG" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Ləğv et">
                    <input type="submit" id="insert" class="btn btn-success" value="Əlavə et">
                </div>
            </form>
        </div>
    </div>
</div>
<script>
function valid_numbers(e) {
    var key = e.which || e.KeyCode;
    if (key >= 48 && key <= 57 && key || key==46)
            // to check whether pressed key is number or not
            return true;
        else return false;
    }
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
