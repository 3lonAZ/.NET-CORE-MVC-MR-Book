@model List<OrderModel>

<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-xs-6">
                    <h2>Sifarişlər</h2>
                </div>
                <div class="col-xs-6">
                    <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal">
                        <i class="material-icons">&#xE15C;</i> <span>Sil</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="center-div" style="overflow-x:auto;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Kitab nömrəsi</th>
                        <th>Kitab Adı</th>
                        <th>Ad/Soyad</th>
                        <th>Əlaqə Nömrəsi</th>
                        <th>Ədəd</th>
                        <th>Adres</th>
                        <th>Sifariş vaxtı</th>
                        <th>&nbsp; Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.BookID</td>
                            <td>@item.BookName</td>
                            <td>@item.FullName</td>
                            <td>@item.ContactNumber</td>
                            <td>@item.Count</td>
                            <td>@item.Address</td>
                            <td>@item.OrderDate.ToString("dd.MM.yyyy HH:mm")</td> 
                            <td>
                                <a asp-route-id="@item.Id" asp-action="DeleteById" class="delete">
                                    <i class="material-icons"
                                   data-toggle="tooltip" title="Delete">&#xE872;</i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<partial name="~/Areas/Admin/Views/Shared/Partials/Orders/DeleteOrders.cshtml"></partial>
