@model List<LanguageModel>

<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-xs-6">
                    <h2>Dil</h2>
                </div>
                <div class="col-xs-6">
                    <a asp-action="AddLanguage" class="btn btn-success">
                        <i class="material-icons">&#xE147;</i> <span>Əlavə et</span>
                    </a>
                    <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal">
                        <i class="material-icons">&#xE15C;</i> <span>Sil</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="center-div" style="overflow-x:auto;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Dil</th>
                        <th>Dəyiş/Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Language</td>
                            <td>
                                <a asp-route-id="@item.Id" asp-action="EditLanguage" class="edit">
                                    <i class="material-icons"
                                   data-toggle="tooltip" title="Edit">&#xE254;</i>
                                </a>
                                <a asp-route-id="@item.Id" asp-action="DeleteById" class="delete">
                                    <i class="material-icons"
                                   data-toggle="tooltip" title="Delete">&#xE872;</i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<partial name="~/Areas/Admin/Views/Shared/Partials/Language/DeleteLanguage.cshtml"></partial>
